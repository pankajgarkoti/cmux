{
  "env": {
    "CLAUDE_CODE_ENABLE_PROMPT_SUGGESTION": "false"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion|EnterPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/block-interactive.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/block-supervisor-edits.sh",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/stream-thought.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Write|Edit|Read",
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/notify-output.sh",
            "timeout": 10
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/audit-log.sh",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "{ [ \"$CMUX_AGENT_NAME\" = \"supervisor\" ] && date +%s > \"${CMUX_HOME:-$(git rev-parse --show-toplevel)}/.cmux/.supervisor-heartbeat\"; } || { [ \"${CMUX_AGENT_ROLE:-}\" = \"project-supervisor\" ] && date +%s > \"${CMUX_HOME:-$(git rev-parse --show-toplevel)}/.cmux/.${CMUX_AGENT_NAME}-heartbeat\"; } || true",
            "timeout": 5,
            "async": true
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/stream-result.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/stop-gate.sh",
            "timeout": 15
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/notify-complete.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": []
  }
}
